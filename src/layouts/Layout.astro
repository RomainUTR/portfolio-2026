---
// src/layouts/Layout.astro
import "../styles/global.css";
import Footer from "../components/Footer.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" type="image/png" href="/favicon.png" />

        <title>
            {
                title === "Welcome"
                    ? "Romain Unternaehrer â€” Game Programmer & Tech Art Student"
                    : `${title} | Romain Unternaehrer`
            }
        </title>
        <meta
            name="description"
            content="Bachelor's student in Game Design specialising in programming and Tech Art C#. Discover my projects and prototypes created on Unity."
        />

        <meta property="og:title" content={title} />
        <meta
            property="og:description"
            content="Game Programmer & Tech Art Portfolio - Romain Unternaehrer"
        />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://romain-unternaehrer.fr" />
        <meta property="og:image" content="/images/og-image.png" />

        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "WebSite",
                "name": "Romain Unternaehrer",
                "url": "https://romain-unternaehrer.fr"
            }
        </script>
    </head>

    <body
        class="bg-black text-white font-sans antialiased flex flex-col min-h-screen"
    >
        <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 flex-grow w-full">
            <slot />
        </main>

        <Footer />
    </body>
</html>
