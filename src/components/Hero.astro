---
// src/components/Hero.astro
import { Image } from 'astro:assets';
import profilePic from '../assets/romain.jpg';
---

<section class="min-h-[70vh] flex flex-col-reverse md:flex-row items-center justify-between pt-20 pb-10 gap-10 border-b border-zinc-800">
    
    <div class="flex-1 flex flex-col items-start text-left">
        
        <span class="text-zinc-500 font-mono text-sm mb-4 tracking-widest uppercase">
            Portfolio 2026
        </span>

        <h1 class="text-5xl md:text-7xl font-bold text-white tracking-tighter mb-6 leading-tight">
            Romain <span class="text-zinc-600">Unternaehrer</span>
        </h1>

        <div class="text-lg md:text-xl text-zinc-400 font-light max-w-lg space-y-4">
            <p>
                <span class="text-indigo-400 font-medium">Game Programming & Tech Art Student</span>
            </p>
            <p>
                I develop tools and gameplay in <span class="text-white">Unity</span>.
            </p>
        </div>

        <div class="mt-8 flex flex-wrap gap-4">
            <a href="#projects" class="bg-white text-black px-6 py-3 font-bold rounded hover:bg-zinc-200 transition-colors">
                My projects
            </a>
            <a href="https://github.com/RomainUTR" target="_blank" class="border border-zinc-700 text-zinc-300 px-6 py-3 font-medium rounded hover:border-white hover:text-white transition-colors">
                GitHub
            </a>

            <a href="https://romainutr.itch.io" target="_blank" class="flex items-center justify-center border border-zinc-700 text-zinc-300 px-5 py-3 font-medium rounded hover:border-[#fa5c5c] hover:text-[#fa5c5c] transition-colors">
                Itch.io
            </a>
        </div>
    </div>

    <div class="relative w-64 h-64 md:w-80 md:h-80 flex-shrink-0">
        <div class="absolute inset-0 bg-indigo-500 blur-[60px] opacity-20 rounded-full"></div>
        
        <Image 
            src={profilePic} 
            alt="Romain Unternaehrer" 
            class="relative w-full h-full object-cover rounded-2xl border border-zinc-800 shadow-2xl rotate-3 hover:rotate-0 transition-transform duration-500"
            width={600}
            densities={[1.5, 2]}
        />
    </div>

</section>