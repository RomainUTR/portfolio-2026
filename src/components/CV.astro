---
// src/components/CV.astro
const experiences = [
    {
        date: "2025 - Present",
        title: "Bachelor Game Design (Tech & Prog)",
        school: "Bellecour Ecole, Lyon",
        desc: "Retraining in technology. Focus on C# (Unity), code architecture and engine integration.",
    },
    {
        date: "2023 - 2025",
        title: "Bachelor 3D Art & Animation",
        school: "Bellecour Ecole, Lyon",
        desc: "1.5 years validated. Hard Surface Modelling, UV Mapping, Texturing and Animation Techniques. A technical immersion in the constraints of asset production.",
    },
    {
        date: "2022 - 2023",
        title: "Entertainment Foundation Year",
        school: "Bellecour Ecole, Lyon",
        desc: "Intensive preparatory year. Learning the fundamentals of art: academic drawing, perspective, colour theory and composition.",
    },
    {
        date: "2019 - 2022",
        title: "Baccalauréat & BIA",
        school: "Ensemble Scolaire Bellevue Marie Rivier, Alès",
        desc: "Obtained Baccalaureate (Digital Technology and Computer Science, History Geography Geopolitics and Political Science) with honours, and Brevet d'Initiation Aéronautique (BIA) with honours.",
    },
];
---

<section id="cv" class="py-20 border-t border-zinc-900">
    <div class="max-w-4xl mx-auto px-4">
        <div
            class="flex flex-col md:flex-row justify-between items-start mb-12"
        >
            <div>
                <h2 class="text-3xl font-bold text-white">Education</h2>
                <p class="text-zinc-500 mt-2">
                    Shaping worlds through art and code
                </p>
            </div>

            <a
                href="https://www.linkedin.com/in/romainutr"
                target="_blank"
                class="mt-4 md:mt-0 flex items-center gap-2 bg-zinc-800 hover:bg-[#0077b5] border border-zinc-700 hover:border-[#0077b5] text-white px-5 py-2 rounded font-medium transition-all duration-300 group"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="group-hover:scale-110 transition-transform"
                >
                    <path
                        d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                    ></path>
                </svg>
                My LinkedIn's profile
            </a>
        </div>

        <div class="space-y-12">
            {
                experiences.map((item) => (
                    <div class="relative pl-8 md:pl-0">
                        <div class="md:hidden absolute left-0 top-0 bottom-0 w-px bg-zinc-800" />
                        <div class="md:hidden absolute left-[-4px] top-2 w-2 h-2 rounded-full bg-indigo-500" />

                        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                            <div class="md:text-right">
                                <span class="text-indigo-400 font-mono text-sm font-bold">
                                    {item.date}
                                </span>
                            </div>
                            <div class="md:col-span-3">
                                <h3 class="text-xl font-bold text-white">
                                    {item.title}
                                </h3>
                                <p class="text-zinc-500 mb-2">{item.school}</p>
                                <p class="text-zinc-400 text-sm leading-relaxed max-w-2xl">
                                    {item.desc}
                                </p>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
